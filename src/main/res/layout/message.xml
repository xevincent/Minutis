<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="72dp"
              android:paddingTop="8dip"
              android:paddingBottom="8dip"
              android:paddingLeft="-8dip"
              android:paddingRight="0dip"
              android:paddingStart="-8dip"
              android:paddingEnd="0dip"
              android:orientation="vertical"
              android:background="#FFFFFF"
              android:gravity="center_vertical" >

	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:orientation="horizontal" >

		<ImageView android:id="@+id/message_image"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:gravity="top"
		           android:layout_gravity="top"
		           android:paddingLeft="16dp"
		           android:paddingRight="0dp"
		           android:paddingStart="16dp"
		           android:paddingEnd="0dp"
		           android:tint="@color/accent"
		           android:src="@drawable/ic_person_black_24dp" />

		<TextView android:id="@+id/message_content"
		          android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:gravity="top"
		          android:layout_gravity="top"
		          android:paddingLeft="32dp"
		          android:paddingRight="16dp"
		          android:paddingStart="32dp"
		          android:paddingEnd="16dp"
		          android:textSize="16sp" />
	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:paddingTop="8dp"
	              android:orientation="horizontal" >

		<TextView android:id="@+id/message_date"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:gravity="center_vertical"
		          android:layout_gravity="center_vertical"
		          android:paddingLeft="72dp"
		          android:paddingRight="8dp"
		          android:paddingStart="72dp"
		          android:paddingEnd="8dp"
		          android:textSize="12sp"
		          android:alpha="0.54" />

		<ImageView android:id="@+id/message_ack"
		           android:layout_width="wrap_content"
		           android:layout_height="match_parent"
		           android:layout_gravity="center_vertical"
		           android:src="@drawable/ic_email_black_18dp"
		           android:alpha="0.54" />

		<Space android:layout_width="0dp"
		       android:layout_height="0dp"
		       android:layout_weight="1" />

		<ImageView android:id="@+id/message_address"
		           android:layout_width="wrap_content"
		           android:layout_height="match_parent"
		           android:layout_gravity="center_vertical"
		           android:paddingLeft="0dp"
		           android:paddingRight="16dp"
		           android:paddingStart="0dp"
		           android:paddingEnd="16dp"
		           android:tint="@color/accent"
		           android:src="@drawable/ic_directions_black_24dp"
		           android:onClick="startNavigation" />
  </LinearLayout>
</LinearLayout>
